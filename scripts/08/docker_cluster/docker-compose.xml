version: '3.8'
 
services:
  primary:
    container_name: pg-primary
    build:
      context: ./primary
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: my-secret-pw
      POSTGRES_DB: postgres
    volumes:
      - primary-data:/var/lib/postgresql/data
      - ./primary/init.sql:/docker-entrypoint-initdb.d/init.sql
    ports:
      - "5433:5432"
    networks:
      - pgcluster
 
  replica1:
    container_name: pg-replica1
    build:
      context: ./replica1
    environment:
      POSTGRES_USER: replica    
      POSTGRES_PASSWORD: replica_pass
    volumes:
      - replica1-data:/var/lib/postgresql/data
      - ./replica1/recovery.sh:/docker-entrypoint-initdb.d/recovery.sh
    ports:
      - "5434:5432"
    depends_on:
      - primary
    networks:
      - pgcluster
 
  replica2:
    container_name: pg-replica2
    build:
      context: ./replica2
    environment:
      POSTGRES_USER: replica    
      POSTGRES_PASSWORD: replica_pass
    volumes:
      - replica2-data:/var/lib/postgresql/data
      - ./replica2/recovery.sh:/docker-entrypoint-initdb.d/recovery.sh
    ports:
      - "5435:5432"
    depends_on:
      - primary
    networks:
      - pgcluster
 
volumes:
  primary-data:
  replica1-data:
  replica2-data:
 
networks:
  pgcluster:
    external: true